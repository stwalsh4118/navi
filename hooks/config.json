      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "~/.claude-sessions/hooks/notify.sh waiting" }]
      }
    ],
    "Stop": [
      {
        "hooks": [{ "type": "command", "command": "~/.claude-sessions/hooks/notify.sh done" }]
      }
